<Window x:Class="CalendarProject_App.View.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
         xmlns:header="clr-namespace:HeaderProject.View;assembly=HeaderProject"
        xmlns:content="clr-namespace:ContentProject.View;assembly=ContentProject"
        xmlns:footer="clr-namespace:FooterProject.View;assembly=FooterProject"
        Title="MainWindow" Height="450" Width="800">
    
    <Grid>
        <!-- ヘッダー -->
        <header:HeaderControl Name="HeaderArea" HorizontalAlignment="Stretch" VerticalAlignment="Top" Height="60" />

        <!-- コンテンツ -->
        <content:MyContentControl Name="ContentArea" Grid.Row="1" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" />

        <!-- フッター -->
        <footer:FooterControl Name="FooterArea" HorizontalAlignment="Stretch" VerticalAlignment="Bottom" Height="40" />
    </Grid>
</Window>